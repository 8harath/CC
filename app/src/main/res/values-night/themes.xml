<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Theme.CC" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/subscriber_primary</item>
        <item name="colorPrimaryVariant">@color/subscriber_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/publisher_primary</item>
        <item name="colorSecondaryVariant">@color/publisher_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <!-- Material 3 attributes -->
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOutline">@color/outline_dark</item>
        <item name="colorOutlineVariant">@color/outline_variant_dark</item>
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.CC.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.CC.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.CC.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.CC.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.CC.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.CC.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.CC.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.CC.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.CC.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.CC.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.CC.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.CC.LabelSmall</item>
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.CC.Button</item>
        <item name="materialCardViewStyle">@style/Widget.CC.CardView</item>
    </style>

    <!-- Typography Styles for Night Mode -->
    <style name="TextAppearance.CC.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.CC.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.CC.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.CC.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.CC.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.CC.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.CC.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="TextAppearance.CC.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="TextAppearance.CC.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="TextAppearance.CC.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.CC.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.CC.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Component Styles for Night Mode -->
    <style name="Widget.CC.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CC.LabelLarge</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.CC.Button.Secondary" parent="Widget.Material3.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CC.LabelMedium</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.CC.CardView" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.CC.CardView.Compact" parent="Widget.CC.CardView">
        <item name="contentPadding">12dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
</resources>