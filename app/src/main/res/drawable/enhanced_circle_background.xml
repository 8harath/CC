<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    
    <!-- Apple-style gradient background -->
    <gradient
        android:type="linear"
        android:angle="135"
        android:startColor="@color/subscriber_primary"
        android:endColor="@color/subscriber_secondary"
        android:centerColor="@color/subscriber_primary" />
    
    <!-- Enhanced shadow effect -->
    <stroke
        android:width="1dp"
        android:color="@color/outline_variant" />
</shape>
