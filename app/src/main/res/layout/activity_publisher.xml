<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Enhanced App Bar with Apple-inspired design -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="2dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/emergency_alert_publisher"
            app:titleTextAppearance="@style/TextAppearance.CC.TitleLarge"
            app:titleTextColor="@color/text_primary"
            app:titleMarginStart="16dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Enhanced Connection Status Section with Apple-style design -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/outline_variant"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connection Status"
                        android:textAppearance="@style/TextAppearance.CC.TitleMedium"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="-0.01" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Enhanced MQTT Status with Apple-style design -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp"
                            android:padding="20dp"
                            android:background="@drawable/enhanced_status_background"
                            android:backgroundTint="@color/surface_secondary">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_mqtt"
                                android:tint="@color/info"
                                android:contentDescription="MQTT status icon" />

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="20dp"
                                android:text="MQTT: Disabled"
                                android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif"
                                android:letterSpacing="0.01" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnEnableMqtt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enable"
                                android:textSize="12sp"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                app:cornerRadius="20dp"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:padding="16dp"
                            android:background="@color/surface_secondary"
                            android:backgroundTint="@color/surface_secondary">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_bluetooth"
                                android:tint="@color/info"
                                android:contentDescription="ESP32 status icon" />

                            <TextView
                                android:id="@+id/tvEsp32Status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="ESP32: Not Connected"
                                android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:padding="16dp"
                            android:background="@color/surface_secondary"
                            android:backgroundTint="@color/surface_secondary">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_sensor"
                                android:tint="@color/info"
                                android:contentDescription="Sensor data icon" />

                            <TextView
                                android:id="@+id/tvSensorData"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Sensor Data: No data"
                                android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:background="@color/surface_secondary"
                            android:backgroundTint="@color/surface_secondary">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location"
                                android:tint="@color/info"
                                android:contentDescription="GPS status icon" />

                            <TextView
                                android:id="@+id/tvGpsStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="GPS: Not available"
                                android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced ESP32 Connection Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/outline_variant"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ESP32 Device"
                        android:textAppearance="@style/TextAppearance.CC.TitleMedium"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDiscoverEsp32"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                                                    android:layout_weight="1"
                        android:text="Discover"
                        android:layout_marginEnd="8dp"
                        android:textAppearance="@style/TextAppearance.CC.LabelMedium"
                        android:contentDescription="Discover ESP32 devices"
                        style="@style/Widget.AppCompat.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnConnectEsp32"
                                                    android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Connect"
                        android:layout_marginStart="8dp"
                        android:textAppearance="@style/TextAppearance.CC.LabelMedium"
                        android:contentDescription="Connect to ESP32 device"
                        style="@style/Widget.AppCompat.Button" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDisconnectEsp32"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Disconnect"
                        android:textAppearance="@style/TextAppearance.CC.LabelMedium"
                        android:contentDescription="Disconnect from ESP32 device"
                        style="@style/Widget.AppCompat.Button" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Medical Profile Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/outline_variant"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medical Profile"
                        android:textAppearance="@style/TextAppearance.CC.TitleMedium"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvMedicalProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No medical profile loaded"
                        android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="20dp"
                        android:lineSpacingExtra="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLoadProfile"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Load Medical Profile"
                        android:textAppearance="@style/TextAppearance.CC.LabelMedium"
                        android:contentDescription="Load medical profile"
                        style="@style/Widget.AppCompat.Button" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Emergency Mode Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEmergencyMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/emergency_on_container"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp"
                    android:background="@color/emergency_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMERGENCY MODE"
                        android:textAppearance="@style/TextAppearance.CC.HeadlineSmall"
                        android:textColor="@color/emergency_text"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvEmergencyCountdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto-send in: 30s"
                        android:textAppearance="@style/TextAppearance.CC.TitleMedium"
                        android:textColor="@color/emergency_text"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelEmergency"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:text="I'm OK"
                            android:layout_marginEnd="8dp"
                            android:textAppearance="@style/TextAppearance.CC.LabelMedium"
                            android:contentDescription="Cancel emergency alert"
                            style="@style/Widget.AppCompat.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSendNow"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:text="Send Now"
                            android:layout_marginStart="8dp"
                            android:textAppearance="@style/TextAppearance.CC.LabelMedium"
                            android:contentDescription="Send emergency alert immediately"
                            style="@style/Widget.AppCompat.Button" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Emergency Button Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="3dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/outline_variant"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_emergency"
                        android:tint="@color/publisher_primary"
                        android:contentDescription="Emergency alert icon"
                        android:background="@drawable/circle_background"
                        android:padding="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Emergency Alert"
                        android:textAppearance="@style/TextAppearance.CC.TitleLarge"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28dp"
                        android:gravity="center"
                        android:text="Tap the button below to send an emergency alert to responders"
                        android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="2dp" />

                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottieCheckmark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            app:lottie_fileName="checkmark_success.json"
                            app:lottie_autoPlay="false"
                            app:lottie_loop="false" />

                        <ImageView
                            android:id="@+id/fallbackCheckmark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:src="@drawable/ic_emergency"
                            android:tint="@android:color/holo_green_dark"
                            android:scaleType="fitCenter" />

                    </FrameLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEmergency"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:text="SOS"
                        android:textAppearance="@style/TextAppearance.CC.HeadlineMedium"
                        android:textColor="@color/white"
                        android:contentDescription="Emergency SOS button"
                        app:cornerRadius="64dp"
                        app:icon="@drawable/ic_emergency"
                        app:iconGravity="top"
                        app:iconSize="36dp"
                        app:iconTint="@color/white"
                        android:backgroundTint="@color/emergency_on_container"
                        android:elevation="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 