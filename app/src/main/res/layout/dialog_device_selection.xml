<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select ESP32 Device"
        android:textAppearance="@style/TextAppearance.CC.TitleLarge"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tvDiscoveryStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discovering devices..."
        android:textAppearance="@style/TextAppearance.CC.BodyMedium"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDevices"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRefresh"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Refresh"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.CC.LabelMedium"
            android:contentDescription="Refresh device discovery"
            style="@style/Widget.CC.Button.Secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.CC.LabelMedium"
            android:contentDescription="Cancel device selection"
            style="@style/Widget.CC.Button.Secondary" />

    </LinearLayout>

</LinearLayout>
