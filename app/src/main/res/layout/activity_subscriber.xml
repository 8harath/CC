<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.subscriber.SubscriberActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            app:title="Emergency Responder Mode"
            app:titleTextColor="@color/text_primary"
            app:titleTextAppearance="@style/TextAppearance.CC.TitleLarge"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:menu="@menu/menu_subscriber" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- MQTT Connection Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MQTT Connection Status"
                        android:textAppearance="@style/TextAppearance.CC.TitleMedium"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Connection Status Indicator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:id="@+id/connectionIndicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_background"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvConnectionStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Disconnected"
                            android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTestConnection"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Test Connection"
                            android:textSize="12sp"
                            app:cornerRadius="20dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                    <!-- Broker Settings -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:hint="Broker IP Address"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etBrokerIp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:text="192.168.0.101" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Broker Port"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etBrokerPort"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:text="1883" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveSettings"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Save Settings"
                            app:cornerRadius="24dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Emergency Alerts Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Alerts"
                        android:textAppearance="@style/TextAppearance.CC.TitleMedium"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Alert Count Badge -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvAlertCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 alerts received"
                            android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                            android:textColor="@color/text_secondary" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/outline_variant" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearAlerts"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Clear All"
                            android:textSize="12sp"
                            app:cornerRadius="16dp"
                            style="@style/Widget.Material3.Button.TextButton" />

                    </LinearLayout>

                    <!-- Alerts RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAlerts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:background="@drawable/edit_text_background"
                        app:cornerRadius="12dp" />

                    <!-- No Alerts Placeholder -->
                    <TextView
                        android:id="@+id/tvNoAlerts"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="No emergency alerts received yet.\n\nAlerts will appear here when crash victims send emergency messages."
                        android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                        android:textColor="@color/text_tertiary"
                        android:gravity="center"
                        android:background="@drawable/edit_text_background"
                        android:padding="20dp"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Hidden Experimental Features Section (Collapsed by default) -->
            <LinearLayout
                android:id="@+id/llExperimentalFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced Features (Hidden)"
                    android:textAppearance="@style/TextAppearance.CC.TitleSmall"
                    android:textColor="@color/text_tertiary"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.6" />

                <!-- MQTT Testing (Hidden) -->
                <LinearLayout
                    android:id="@+id/llMqttTesting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTestMqttConnection"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Test MQTT Connection"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="24dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSendTestMessage"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Send Test Message"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="24dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

                <!-- Settings (Hidden) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMqttSettings"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="MQTT Settings"
                    android:layout_marginBottom="8dp"
                    app:cornerRadius="24dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

            <!-- Show/Hide Experimental Features Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggleExperimental"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Show Advanced Features"
                android:textSize="12sp"
                app:cornerRadius="20dp"
                android:layout_gravity="center"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 