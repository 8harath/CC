<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAlert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeWidth="1.5dp"
    app:strokeColor="@color/outline_variant"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:contentDescription="Emergency alert card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Enhanced Header Section with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_emergency"
                android:tint="@color/error"
                android:contentDescription="Emergency alert icon"
                android:background="@drawable/circle_background"
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:id="@+id/tvVictimName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textAppearance="@style/TextAppearance.CC.TitleMedium"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apr 10, 14:32"
                    android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <!-- Enhanced Severity Badge -->
            <TextView
                android:id="@+id/tvSeverity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH"
                android:textAppearance="@style/TextAppearance.CC.LabelMedium"
                android:textColor="@color/white"
                android:background="@drawable/severity_badge_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:minWidth="56dp"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Enhanced Location Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:background="@color/surface_secondary"
            android:padding="16dp"
            android:backgroundTint="@color/surface_secondary">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                android:tint="@color/subscriber_primary"
                android:contentDescription="Location icon" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Lat: 12.3456, Lng: 78.9012"
                android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Enhanced Response Status -->
        <LinearLayout
            android:id="@+id/responseStatusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivResponseIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_circle"
                android:tint="@color/success"
                android:contentDescription="Response status icon" />

            <TextView
                android:id="@+id/tvResponseStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Response Acknowledged - ETA: 15 min"
                android:textAppearance="@style/TextAppearance.CC.BodyMedium"
                android:textColor="@color/success"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="View Details"
                android:textAppearance="@style/TextAppearance.CC.LabelMedium"
                android:backgroundTint="@color/subscriber_primary"
                android:textColor="@color/white"
                app:cornerRadius="22dp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconSize="16dp"
                app:iconTint="@color/white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>