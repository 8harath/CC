<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MQTT Communication Test"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Test Controls Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/enhanced_circle_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Controls"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Publisher Test -->
        <Button
            android:id="@+id/btnTestPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Publisher Mode"
            android:background="@drawable/enhanced_button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Subscriber Test -->
        <Button
            android:id="@+id/btnTestSubscriber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Subscriber Mode"
            android:background="@drawable/enhanced_button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Connection Test -->
        <Button
            android:id="@+id/btnTestConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test MQTT Connection"
            android:background="@drawable/enhanced_button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Send Test Alert -->
        <Button
            android:id="@+id/btnSendTestAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Test Emergency Alert"
            android:background="@drawable/enhanced_button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Network Check -->
        <Button
            android:id="@+id/btnCheckNetwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Network Status"
            android:background="@drawable/enhanced_button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Clear Logs -->
        <Button
            android:id="@+id/btnClearLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Logs"
            android:background="@drawable/enhanced_button_background"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Logs Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/enhanced_circle_background"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Logs"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_background"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MQTT Test Logs will appear here...\n\n"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>
